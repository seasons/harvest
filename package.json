{
  "scripts": {
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "ios": "react-native run-ios",
    "start": "react-native start && yarn start-packager",
    "test": "jest",
    "web": "expo start --web",
    "start-packager": "env REACT_DEBUGGER=\"$([ -d '/Applications/React Native Debugger.app' ] && echo \"open 'rndebugger://set-debugger-loc?host=localhost&port=8081' --args\")\" node node_modules/react-native/local-cli/cli.js start",
    "fix-androidx": "bash ./scripts/fix-androidx.sh",
    "postinstall": "bash ./scripts/fix-androidx.sh"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@react-native-community/async-storage": "^1.6.2",
    "apollo-boost": "^0.4.4",
    "expo": "^34.0.1",
    "graphql": "^14.5.8",
    "lodash": "^4.17.15",
    "lottie-ios": "3.1.3",
    "lottie-react-native": "^3.2.1",
    "native-base": "^2.13.5",
    "react": "16.8.3",
    "react-apollo": "^3.1.1",
    "react-dom": "^16.8.6",
    "react-native": "0.59.10",
    "react-native-auth0": "^1.6.0",
    "react-native-gesture-handler": "~1.3.0",
    "react-native-navigation": "3.1.1",
    "react-native-reanimated": "~1.1.0",
    "react-native-svg": "^9.9.3",
    "react-native-unimodules": "~0.5.2",
    "react-native-web": "^0.11.4",
    "react-spring": "^8.0.27",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/react": "^16.8.23",
    "@types/react-native": "^0.57.65",
    "@types/styled-system": "^5.1.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-expo": "^6.0.0",
    "jest-expo": "^34.0.0",
    "jetifier": "^1.6.4",
    "typescript": "^3.4.5"
  },
  "jest": {
    "preset": "react-native",
    "moduleNameMapper": {
      "^App(.*)$": "<rootDir>/src$1",
      "^Config(.*)$": "<rootDir>/src/Config$1",
      "^Components(.*)$": "<rootDir>/src/Components$1",
      "^Scenes(.*)$": "<rootDir>/src/Scenes$1"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "private": true
}
