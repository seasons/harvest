{
  "scripts": {
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "ios": "react-native run-ios",
    "start": "yarn start-servers",
    "start-servers": "concurrently --kill-others 'yarn start-packager'",
    "test": "jest",
    "jetify": "jetify",
    "web": "expo start --web",
    "start-packager": "env REACT_DEBUGGER=\"$([ -d '/Applications/React Native Debugger.app' ] && echo \"open 'rndebugger://set-debugger-loc?host=localhost&port=8081' --args\")\" node node_modules/react-native/local-cli/cli.js start",
    "fix-androidx": "bash ./scripts/fix-androidx.sh",
    "postinstall": "bash ./scripts/fix-androidx.sh"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@expo/react-native-fade-in-image": "^1.1.1",
    "@react-native-community/async-storage": "^1.6.2",
    "@types/jest": "^24.0.18",
    "@types/react-navigation": "^3.0.8",
    "apollo-boost": "^0.4.4",
    "apollo-link-context": "^1.0.19",
    "expo": "^35.0.0",
    "graphql": "^14.5.8",
    "lodash": "^4.17.15",
    "native-base": "^2.13.5",
    "react": "16.8.3",
    "react-apollo": "^3.1.1",
    "react-dom": "16.8.3",
    "react-native": "0.59.10",
    "react-native-auth0": "^1.6.0",
    "react-native-dotenv": "^0.2.0",
    "react-native-gesture-handler": "~1.3.0",
    "react-native-reanimated": "~1.2.0",
    "react-native-safe-area-context": "~0.3.6",
    "react-native-screens": "~1.0.0-alpha.23",
    "react-native-svg": "~9.9.2",
    "react-native-unimodules": "0.6.0",
    "react-native-web": "^0.11.7",
    "react-navigation": "^4.0.10",
    "react-navigation-stack": "^1.9.4",
    "react-navigation-tabs": "^2.5.6",
    "react-redux": "^7.1.1",
    "react-spring": "^8.0.27",
    "redux": "^4.0.4",
    "redux-persist": "^6.0.0",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/react": "^16.8.23",
    "@types/react-native": "^0.57.65",
    "@types/styled-system": "^5.1.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-expo": "^7.0.0",
    "concurrently": "2.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.0",
    "jest": "^24.9.0",
    "jest-expo": "^35.0.0",
    "jest-raw-loader": "1.0.1",
    "jest-styled-components": "7.0.0-2",
    "jetifier": "^1.6.4",
    "react-test-renderer": "^16.9.0",
    "remote-redux-devtools": "^0.5.16",
    "snapshot-diff": "0.2.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^App/(.*)$": "<rootDir>/src/$1",
      "^Assets/(.*)$": "<rootDir>/assets/$1",
      "^Components/(.*)$": "<rootDir>/src/Components/$1",
      "^Scenes/(.*)$": "<rootDir>/src/Scenes/$1",
      "^Utils/(.*)$": "<rootDir>/src/utils/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/*-tests.(ts|tsx|js)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost/",
    "setupFilesAfterEnv": [
      "./src/setupJest.ts"
    ],
    "cacheDirectory": ".jest/cache",
    "transform": {
      "^[./a-zA-Z0-9$_-]+\\.(bmp|gif|jpg|jpeg|mp4|png|psd|svg|webp)$": "<rootDir>/node_modules/react-native/jest/assetFileTransformer.js",
      "node_modules/react-native/.+\\.(js|tsx?)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      ".*(ts|tsx|js|jsx)$": "babel-jest",
      "\\.graphql$": "jest-raw-loader"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native(-.*)?)/)"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "private": true
}
